      .display-2 {
        display: flex;
        justify-content: center;
        font-family: Arial, sans-serif;
      }

      .Button-div {
        display: flex;
        justify-content: end;
        padding: 0rem 1rem;
      }
      .table-div {
        padding: 1rem;
      }
    </style>
  </head>
  <body>
