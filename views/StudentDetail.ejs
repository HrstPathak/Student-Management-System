    </nav>
    <div class="heading_div">
      <h1 class="display-2">Student Detail</h1>
    </div>
    <div class="Button-div">
      <!-- Button trigger modal -->
      <button
        type="button"
        class="btn btn-outline-success"
        data-bs-toggle="modal"
        data-bs-target="#staticBackdrop"
      >
        Add Student Detail
      </button>

      <!-- Modal -->
      <div
        class="modal fade"
        id="staticBackdrop"
        data-bs-backdrop="static"
        data-bs-keyboard="false"
        tabindex="-1"
        aria-labelledby="staticBackdropLabel"
        aria-hidden="true"
      >
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="staticBackdropLabel">
                Enter Student Detail
              </h5>
              <button
                type="button"
                class="btn-close"
                data-bs-dismiss="modal"
                aria-label="Close"
              ></button>
            </div>
            <div class="modal-body">
              <form method="post" action="/StudentEnterDetail" class="row g-3">
                <div class="col-md-6">
                  <label for="inputEmail4" class="form-label">Name</label>
                  <input
                    type="text"
                    placeholder="Student Name here.."
                    class="form-control"
                    id="inputEmail4"
                    name="Name"
                  />
                </div>
                <div class="col-md-6">
                  <label for="inputPassword4" class="form-label"
                    >D . O . B</label
                  >
                  <input
                    type="date"
                    name="Dob"
                    class="form-control"
                    id="inputPassword4"
                  />
                </div>
                <div class="col-12">
                  <label for="inputAddress" class="form-label">Address</label>
                  <input
                    type="text"
                    class="form-control"
                    id="inputAddress"
                    placeholder="1234 Main St"
                    name="Address"
                  />
                </div>
                <div class="col-md-4">
                  <label for="inputState" class="form-label">Course</label>
                  <select name="Course" id="inputState" class="form-select">
                    <option selected>Choose...</option>
                    <option>B-Tech(CSE)</option>
                    <option>B-Tech(ECE)</option>
                    <option>B-Tech(Civil)</option>
                    <option>B-Tech(Mechanical)</option>
                  </select>
                </div>
                <div class="col-md-4">
                  <label for="inputState" class="form-label">Year/Sem</label>
                  <select id="inputState" name="Sem" class="form-select">
                    <option selected>Choose...</option>
                    <option>1</option>
                    <option>2</option>
                    <option>3</option>
                    <option>4</option>
                    <option>5</option>
                    <option>6</option>
                    <option>7</option>
                    <option>8</option>
                  </select>
                </div>
                <div class="col-12">
                  <label for="inputAddress2" class="form-label"
                    >University Roll no.</label
                  >
                  <input
                    type="text"
                    class="form-control"
                    id="inputAddress2"
                    placeholder="1961060..."
                    pattern="{0-9}"
                    name="Urn"
                  />
                </div>
                <div class="col-md-6">
                  <label for="inputCity" class="form-label"
                    >Total Attendance</label
                  >
                  <input
                    type="text"
                    name="Attend"
                    class="form-control"
                    id="input"
                  />
                </div>
                <div class="col-md-6">
                  <label for="inputCity" class="form-label">Total CGPA</label>
                  <input
                    type="text"
                    class="form-control"
                    name="Cgpa"
                    id="input"
                  />
                </div>
                <div class="col-12">
                  <button type="submit" class="btn btn-primary">Submit</button>
                  <button
                    type="button"
                    class="btn btn-secondary"
                    data-bs-dismiss="modal"
                  >
                    Close
                  </button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="table-div">
      <table class="table">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">DOB</th>
            <th scope="col">Address</th>
            <th scope="col">Course</th>
            <th scope="col">Semester</th>
            <th scope="col">URN</th>
            <th scope="col">Total Attendance</th>
            <th scope="col">Total CGPA</th>
          </tr>
        </thead>
        <tbody>
          <%StudentList.forEach((StuData,index)=>{ %>
          <tr>
            <th scope="row"><%= ++index %></th>
            <td><%= StuData.Name %></td>
            <td><%= StuData.DOB %></td>
            <td><%= StuData.Address %></td>
            <td><%= StuData.Course %></td>
            <td><%= StuData.Sem %></td>
            <td><%= StuData.Urn %></td>
            <td><%= StuData.Attendance %>%</td>
            <td><%= StuData.Cgpa %> CGPA</td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </body>
  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js"
